<h1 class="text-center mb-3">
    {{ title }}
</h1>
<form action="/api/users" method="POST" class="mb-4">
<div class="form-group">
    <label for="name">Name</label>
    <input type="text" required name="name" class="form-control">
</div>
<div class="form-group">
    <label for="age">Age</label>
    <input type="text" required name="age" class="form-control">
</div>
<div class="form-group">
    <label for="color">Color</label>
    <input type="text" required name="color" class="form-control">
</div>
<div class="form-group">
    <input type="submit" value="Add user" class="btn btn-primary btn-block">
</div>
</form>
<h4>Users</h4>
<ul class="list-group">
    {{#each users }}
    <li class="list-group-item">
        {{ this.name }} | {{ this.age }} | {{ this.color }} <a class="link" href="/api/users/{{ this.id }}"> view </a>
    </li>
    {{/each }}
</ul>

<a href="/api/users" class="btn btn-light mt-4">Visit JSON API</a>